<%= link_to "Talk to Me", root_path, :class => 'brand' %>
<% if current_user %>
<ul class="nav pull-left">
  <li>
    <% if not current_user.expert == nil %>
        <%= link_to "Answer Questions", queries_path %>
    <% else %>
      <%= link_to "Become an Expert to Answer Questions", new_expert_path %>
    <% end %>      
  </li>
</ul>
<% end %>
<ul class="nav pull-right">
  <% if current_user %>
    <li>
      <%= link_to "Log Out", log_out_path %>
    </li>
  <% else %>
    <li>
   <%= link_to "Sign Up", sign_up_path %>
    </li>
    <li>
   <%= link_to "Log in", log_in_path %>
    </li>
  <% end %>
</ul>